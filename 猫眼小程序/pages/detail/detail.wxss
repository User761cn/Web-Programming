page{
    background-color: #d8caaf;
    color: #fff;
    
    box-sizing: border-box;
}
.p10{
    padding: 10px;
}
.top{
    display: flex;
}
.t-l{
    flex: 1;
}
.t-l image{
    width: 120px;
}
.t-r{
    flex: 2;
    margin-left: 14rpx;
}
.t-r-1{
    font-size: 45rpx;
    font-weight: 700;
    color: rgb(241, 241, 241);
    margin-bottom: 15px;
}
.t-r-2{
    font-size: 25rpx;
    color: #535050;
    margin-bottom: 5rpx;
}
.btn-box{
    display: flex;
}
.btn-box button{
    width: 220rpx !important;
    margin: 0 !important;
    font-size: 28rpx;
    font-weight: 500;
    background-color: #6d7a89;
    color: #fff;
}
.btn-box button:first-of-type{/*初始样式*/
    margin-right: 20rpx !important;
}
.film-desc{
    margin-top: 10px;
}
.film-desc-content{
    margin-top: 10px;
    letter-spacing: 1px;/*文字之间的间距*/
}
.person{
    margin-top: 20rpx;
}
.scroll-box {
    white-space: nowrap;
    width: 100%;
    margin-top: 15rpx;
}
.scroll-item{
    display: inline-block;/*变为纵向排列*/
    margin-right: 20rpx;
}
.scroll-item image{
    width: 85px;
}
.specialpicture{
    height: 115px;
    overflow: hidden;
}
.cast-m-name{
    font-size: 13px;
    color: #fff;
    text-align: center;
}
.cast-m-role{
    font-size: 13px;
    color: #76828c;
    text-align: center;
}
.videoRecommend{
    width: 150px;
    height: 120px;
    overflow: hidden;
}
.videoRecommend image{
    width: 150px;
}
.comment{
    background-color: #fff;
    color: #000;
    border-radius: 10px 10px 0 0;
}
.comment-content{
    margin-top: 20px;
}
.level{
    font-size: 12px;
    border: 1px solid #ccc;
    padding: 2px 5px;
    border-radius: 80px;
    margin-left: 18px;
}
.content-main{
    margin-top: 10px;
}
.footer{
    margin-top: 10px;
    font-size: 13px;
    border-bottom: 1px solild #efefef;
    padding-bottom: 30px;
}
.footer text{
    background: #eef1e6;
    color: #7b7cbc;
    padding: 2px 10px;
    border-radius: 80px;
}